<?xml version="1.0" encoding="utf-8"?>
<com.jeanbarrossilva.andre.ui.AndreCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:contentPaddingLeft="30dp"
    app:contentPaddingTop="30dp"
    app:contentPaddingRight="30dp"
    app:contentPaddingBottom="40dp"
    app:cardCornerRadius="5dp">

    <com.jeanbarrossilva.andre.ui.AndreLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:verticalSpacing="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <com.jeanbarrossilva.andre.ui.AndreLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:horizontalSpacing="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/color_view"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp"
                    tools:backgroundTint="#2979FF" />

                <TextView
                    android:id="@+id/title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?android:textColorPrimary"
                    tools:text="@string/Area_name_life_quality" />

            </com.jeanbarrossilva.andre.ui.AndreLinearLayout>

        </LinearLayout>

        <com.jeanbarrossilva.andre.ui.AndreRecyclerView
            android:id="@+id/subareas_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="20dp"
            tools:listitem="@layout/view_subarea"
            tools:itemCount="3" />

    </com.jeanbarrossilva.andre.ui.AndreLinearLayout>

</com.jeanbarrossilva.andre.ui.AndreCardView>