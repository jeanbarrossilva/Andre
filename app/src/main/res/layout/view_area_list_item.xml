<?xml version="1.0" encoding="utf-8"?>
<com.jeanbarrossilva.andre.ui.AndreLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?android:selectableItemBackground">

    <com.jeanbarrossilva.andre.ui.AndreLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:horizontalSpacing="20dp">

        <ImageView
            android:id="@+id/iconView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:src="@drawable/ic_family_restroom"
            tools:tint="@color/familyArea"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            tools:text="Family"
            tools:textColor="@color/familyArea" />

    </com.jeanbarrossilva.andre.ui.AndreLinearLayout>

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/attentionLevelProgressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:cpb_progressbar_width="4dp"
        app:cpb_round_border="true"
        tools:cpb_progress="50"
        tools:cpb_progressbar_color="@color/familyArea"
        tools:cpb_background_progressbar_color="#1AF57C00" />

    <TextView
        android:id="@+id/attentionLevelProgressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="50%"
        tools:textColor="@color/familyArea" />

</com.jeanbarrossilva.andre.ui.AndreLinearLayout>