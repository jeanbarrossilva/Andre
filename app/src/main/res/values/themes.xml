<resources xmlns:tools="http://schemas.android.com/tools">

    <style
        name="Theme.Andre"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">@bool/isSystemInLightTheme</item>
        <item
            name="android:windowLightNavigationBar"
            tools:targetApi="27">
            @bool/isSystemInLightTheme
        </item>
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <style
        name="Theme.Andre.Toolbar.Title"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">?android:fontFamily</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="Theme.Andre.BottomSheet"
        parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="Theme.Andre.BottomSheet.Animations">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <declare-styleable name="AndreLinearLayout">
        <attr name="android:horizontalSpacing" />
        <attr name="android:verticalSpacing" />
    </declare-styleable>

    <declare-styleable name="AndreEditText">
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AndreRecyclerView">
        <attr name="android:spacing" format="dimension" />
    </declare-styleable>
</resources>