<resources xmlns:tools="http://schemas.android.com/tools">

    <style
        name="Theme.Andre"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowLightStatusBar">@bool/isSystemInLightTheme</item>
        <item
            name="android:windowLightNavigationBar"
            tools:targetApi="27">
            @bool/isSystemInLightTheme
        </item>
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:colorEdgeEffect">@color/edgeEffect</item>
    </style>

    <style
        name="Theme.Andre.BottomSheet"
        parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="Theme.Andre.BottomSheet.Animations">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <declare-styleable name="AndreLinearLayout">
        <attr name="android:horizontalSpacing" />
        <attr name="android:verticalSpacing" />
    </declare-styleable>

    <declare-styleable name="AndreFlexboxLayout">
        <attr name="android:horizontalSpacing" />
        <attr name="android:verticalSpacing" />
    </declare-styleable>

    <declare-styleable name="AndreEditText">
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="IconButton">
        <attr name="android:icon" format="reference" />
        <attr name="android:iconTint" format="color" />
    </declare-styleable>

    <declare-styleable name="GenerosityBoxButton">
        <attr name="emoji" format="string" />
        <attr name="android:title" format="string" />
        <attr name="price" format="float" />
    </declare-styleable>
</resources>